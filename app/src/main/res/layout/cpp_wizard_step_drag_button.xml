<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
    xmlns:c="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    a:layout_width="match_parent"
    a:layout_height="match_parent"
    a:gravity="center"
    a:orientation="vertical">

    <TextView
        a:id="@+id/wizard_dragbutton_description_textview"
        style="@style/WizardLabel"
        a:text="@string/cpp_wizard_dragbutton_description" />

    <TextView
        a:id="@+id/wizard_dragbutton_action_textview"
        style="@style/WizardLabel"
        a:maxLines="3"
        a:minLines="3"
        a:text="@string/cpp_wizard_dragbutton_action_center"
        a:textStyle="bold" />

    <org.solovyev.android.views.dragbutton.DirectionDragButton
        a:id="@+id/wizard_dragbutton"
        style="?attr/cpp_button_style_operation"
        a:layout_width="@dimen/cpp_wizard_preview_button_size"
        a:layout_height="@dimen/cpp_wizard_preview_button_size"
        a:layout_weight="0"
        a:layout_gravity="center"
        a:layout_margin="0dp"
        a:text="9"
        c:directionTextDown="^2"
        c:directionTextUp="%"
        tools:ignore="HardcodedText" />

</LinearLayout>
