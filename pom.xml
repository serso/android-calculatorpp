	<packaging>pom</packaging>

	<properties>
		<additionalLibs>${basedir}/src/misc/lib</additionalLibs>
	</properties>

	<repositories>
		<repository>
			<id>congrace.de</id>
			<name>releases</name>
			<url>http://nexus.congrace.de/nexus/content/repositories/releases/</url>
			<layout>default</layout>
