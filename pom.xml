			<version>0.2</version>
		</dependency>

		<dependency>
			<groupId>org.solovyev</groupId>
			<artifactId>jscl</artifactId>
			<version>0.0.1</version>
			<exclusions>
				<exclusion>
					<artifactId>xercesImpl</artifactId>
					<groupId>xerces</groupId>
				</exclusion>
			</exclusions>
<!--			<scope>system</scope>
			<systemPath>${additionalLibs}/jscl.jar</systemPath>-->
